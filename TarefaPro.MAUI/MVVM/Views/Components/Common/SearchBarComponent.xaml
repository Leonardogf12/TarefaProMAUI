<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="TarefaPro.MAUI.MVVM.Views.Components.Common.SearchBarComponent"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Border
        Padding="-2"
        HeightRequest="40"
        StrokeThickness="0">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="30" />
        </Border.StrokeShape>
        <Grid Margin="10,0,10,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Image
                Grid.Column="0"
                HeightRequest="20"
                Source="search_icon" />
            <Entry
                Grid.Column="1"
                FontSize="Medium"
                Placeholder="Buscar"
                PlaceholderColor="{StaticResource SecondaryGray}"
                TextChanged="Entry_TextChanged"
                TextColor="Black" />
        </Grid>
    </Border>

</ContentView>
